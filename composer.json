{
    "name": "sezohessen/unit-conversions",
    "description": "Perform conversion in php",
    "keywords": [
        "sezohessen",
        "unit-conversions"
    ],
    "homepage": "https://github.com/sezohessen/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "sezohessen",
            "email": "hu.elshazly@nu.edu.eg",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "sezohessen\\conversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sezohessen\\conversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
